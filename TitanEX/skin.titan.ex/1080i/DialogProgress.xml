<!-- Foundation -->
<window id="101">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>	
	
		<control type="group">
			<visible>!Window.IsActive(movieinformation)</visible><!--DialogVideoInfo play trailer-->			
			<posx>960</posx> <!--Center-->
			<posy>540</posy> <!--Center-->			
		
			<control type="multiimage">	
				<posx>-40</posx> 
				<posy>-40</posy>
				<width>80</width>
				<height>80</height>
				<imagepath>overlays/busy</imagepath>
				<timeperimage>100</timeperimage>
				<colordiffuse></colordiffuse>
				<fadetime>0</fadetime>
			</control>
		</control>		
		
		<control type="group">				<!--Infos-->			
			<visible>Window.IsActive(programs)</visible><!--For Artwork Downloader-->
			<control type="label" id="1">	<!--heading-->				
				<posx>400</posx>
				<posy>10</posy>
				<width>540</width>
				<height>48</height>
				<font>Titan25</font>
				<textcolor>TitanWhite</textcolor>	
			</control>
			<control type="label" id="2">	<!--Line 1-->				
				<posx>400</posx>
				<posy>35</posy>
				<width>540</width>
				<height>48</height>
				<font>Titan25</font>
				<textcolor>TitanWhite</textcolor>	
			</control>
			<control type="label" id="3">	<!--Line 2-->				
				<posx>400</posx>
				<posy>60</posy>
				<width>540</width>
				<height>48</height>
				<font>Titan25</font>
				<textcolor>TitanWhite</textcolor>	
			</control>
			<!--Line 3 Disable-->
			<!--<control type="label" id="4">		
				<posx>400</posx>
				<posy>85</posy>
				<width>540</width>
				<height>48</height>
				<font>Titan25</font>
				<textcolor>TitanWhite</textcolor>	
			</control>-->			
			<control type="progress"><!--Progressbar-->						
				<posx>400</posx>
				<posy>100</posy>
				<width>540</width>
				<height>10</height>
				<info>System.Progressbar</info>
			</control>
		</control>
		
		<control type="button" id="10"> 	<!--Cancel-->
			<description>Cancel</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>0</width>				
			<height>0</height>
			<label>-</label>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>10</onup>
			<ondown>10</ondown>
		</control>

	</controls>

</window>