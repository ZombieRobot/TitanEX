				<posx>550</posx>
				<posy>820</posy>
				<width>900</width>
				<align>left</align>
				<font>Titan35</font>
				<textcolor>TitanMain</textcolor>
				<label>$INFO[VideoPlayer.TVShowTitle] • $LOCALIZE[20373] $INFO[VideoPlayer.Season]</label>
				<scroll>false</scroll>
			</control>
			
			<!--Label Ohter-->			
			<control type="label">
				<visible>!VideoPlayer.Content(Movies) + !VideoPlayer.Content(Episodes)</visible> 
				<posx>550</posx>
				<posy>770</posy>
				<width>900</width>
				<align>left</align>
				<font>TitanLight45</font>
				<textcolor>TitanGrey</textcolor>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<scroll>false</scroll>
			</control>	
	
	
			<!--Time-->
			<control type="label"><!--Left Play Time-->
				<posx>550</posx>
				<posy>880</posy>
				<width>200</width>
				<align>left</align>
				<font>TitanLight32</font>
				<textcolor>TitanGrey</textcolor>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label"><!--Right Time Remaining-->
				<posx>1660</posx>
				<posy>880</posy>
				<width>200</width>
				<align>right</align>
				<font>TitanLight32</font>
				<textcolor>TitanGrey</textcolor>
				<label>- $INFO[Player.TimeRemaining]</label>
			</control>
			<control type="label"><!--End Time-->
				<posx>550</posx>
				<posy>952</posy>
				<width>300</width>
				<align>left</align>
				<font>Titan32</font>
				<textcolor>TitanLightBlack</textcolor>
				<label>$LOCALIZE[41040] $INFO[Player.FinishTime]</label>
			</control>
			
			<control type="grouplist"><!--Clock-->
				<posx>1400</posx>
				<posy>770</posy>
				<width>400</width>
				<height>100</height>
				<align>center</align>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>animation_fade_open_close</include>			
					<control type="label">				
						<width min="0" max="300">auto</width>
						<height>80</height>
						<info>System.Time(hh:mm)</info>
						<font>TitanLight60</font>
						<aligny>center</aligny>
						<textcolor>TitanMain</textcolor>
					</control>
					<control type="label">				
						<visible>substring(system.time,AM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>AM</label>
						<font>TitanLight60</font>
						<aligny>center</aligny>
						<textcolor>TitanMain</textcolor>
					</control>					
					<control type="label">				
						<visible>substring(system.time,PM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>PM</label>
						<font>TitanLight60</font>
						<aligny>center</aligny>
						<textcolor>TitanMain</textcolor>
					</control>
				</control>
		
